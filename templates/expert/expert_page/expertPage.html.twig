{% extends 'base.html.twig' %}

{% block title %}Ma Page Expert {% endblock %}

{% block body %}
{{ include('expert/navExpert.html.twig') }}
<div class="container-fluid wrapperPresta">
    {{ include ('entrepreneur/picturePresta.html.twig')}}
    <div class="mt-3">
        <h1><span class="color-letter">P</span>résentez-vous</h1>
    </div>
    <div class="card mb-3 rounded mt-4">
        {% if user.description is not empty %}
        <p class="p-4">{{ user.description }}</p>
        {% else %}
        <h4 class="pl-4 pr-4 pt-4">Bienvenue sur notre profil !</h4> <br> 
        <p class="pl-4 pr-4">Nous sommes disponibles par message pour répondre à toutes vos questions.
        <br>A bientôt
        </p>
        {% endif %}
    </div>
    <div class="row text-center">
        {% for expertise in user.expertise %}
        <div class="card alert mb-3 rounded-pill col-lg-3 col-md-6 m-4">
            {{expertise.name}}
        </div>
        {% endfor %}
    </div>
    <div class="mt-5">
        <h1><span class="color-letter">V</span>otre identitée visuelle</h1>
    </div>
    <div class="card-deck mt-4 row">
        <div class="col">
            {% if user.logo is empty %}
            <img id="banner_picture" class="img-fluid mb-3" src="https://i.postimg.cc/dtGF2hGw/you-x-ventures-Oalh2-Moj-Uuk-unsplash.jpg"
                alt="{{ user.banner }}">
            {% else %}
            <img id="banner_picture" class="img-fluid mb-3" src="/uploads/banner/{{ user.banner }}"
                alt="{{ user.banner }}">
            {% endif %}
            <h4><span class="color-letter">B</span>annière</h4>
        </div>
        <div class="col">
            {% if user.logo is empty %}
            <p class="logo-default">LOGO</p>
            <img id="logo" class="img-fluid mb-3" src="https://i.postimg.cc/MG2dyGb2/logo-type.png" alt="{{ user.logo }}">
            {% else %}
            <img id="logo" class="img-fluid mb-3" src="/uploads/logo/{{ user.logo }}" alt="{{ user.logo }}">
            {% endif %}
            <h4><span class="color-letter">L</span>ogo</h4>
        </div>
    </div>
    <a href="{{ path('expert_expertPage_edit', {'id': user.id}) }}">
        <button type="button" class="btn btn-inscription nav-link mt-5"><i class="far fa-edit"></i> Editer mon
            profil</button>
    </a>
    <a href="{{path ('home_expert_show', {'slug': user.slug})}}">
        <button type="button" class="btn btn-inscription nav-link mt-5"><i class="fal fa-eye"></i> Voir mon
            profil</button>
    </a>
</div>
<div class="hr-expert mt-5">
    <hr>
</div>
{% endblock %}