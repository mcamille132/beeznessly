<form method="post" action="{{ path('expert_ebook_delete', {'id': ebook.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ebook.id) }}">
    <button class="btn"><i class="far fa-trash-alt"></i> Delete</button>
</form>
